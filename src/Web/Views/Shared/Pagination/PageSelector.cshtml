@model Web.Models.Pagination.PageSelectorViewModel
<div class="page-selector">
    <ul>
        @if (Model.PagesCount != 1)
        {
            @if (Model.CurrentPage > 1)
            {
                <li><a class="text-white" href="@Model.Url(1)">««</a></li>
                <li><a class="text-white" href="@Model.Url(Model.CurrentPage - 1)">«</a></li>
            }

            @for (var i = Model.CurrentPage - 3; i <= Model.CurrentPage + 3; i++)
            {
                if (i > 0 && i <= Model.PagesCount)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li><a class="text-main" href="@Model.Url(i)">@i</a></li>
                    }
                    else
                    {
                        <li><a class="text-white" href="@Model.Url(i)">@i</a></li>
                    }
                }
            }
            @if (Model.CurrentPage < Model.PagesCount)
            {
                <li><a class="text-white" href="@Model.Url(Model.CurrentPage + 1)">»</a></li>
                <li><a class="text-white" href="@Model.Url(Model.PagesCount)">»»</a></li>
            }
        }
    </ul>
</div>
